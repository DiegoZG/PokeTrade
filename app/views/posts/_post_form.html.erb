
<div class="columns">
<div class="column ">
    <%= form_for @post, builder: BulmaFormBuilder::FormBuilder do |f| %>
        <%= f.text_field :title %><br>
        <%= f.text_area :content %><br>
        <%= f.hidden_field :user_id, value: current_user.id %>
        <%= f.submit %>
    <% end %> 
</div>
</div>
