<!DOCTYPE html>
<html>
  <head>
    <title>PokeTrade</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <style>
        img { 
            width: 145px;
            height: 210px;
        }
    </style>
  </head>

  <body>
    <% unless controller_name == "sessions" && action_name == "login" %>
      <% if session[:user_id] %>
        <div class="welcome"> Welcome, <%= current_user.name %> </div>
        <%= link_to "Log Out", logout_path, class: "button is-info" %>
      <% else %>
        <%= link_to "Log In", login_path, class: "button is-info" %>
      <% end %> 
    <% end %>
    <br>

    <%= yield %>

  </body>
</html>
