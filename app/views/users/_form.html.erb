<%= simple_form_for @user do |f| %>
<div class="field">
  <div class="control">
    <%= f.input :name, input_html: { class: 'input' }, wrapper: false, label_html: { class: 'label'} %>
  </div>
</div>
<div class="field">
  <div class="control">
    <%= f.input :location, input_html: { class: 'input' }, wrapper: false, label_html: { class: 'label'} %>
  </div>
</div>
<div class="field">
  <div class="control">
    <%= f.collection_check_boxes :pokemon_card_ids, PokemonCard.all, :id, :title, label_html: { class: 'label'} %>
  </div>
</div>
<%= f.button :submit, class: 'button is-info is bold' %>
<% end %>
</div>