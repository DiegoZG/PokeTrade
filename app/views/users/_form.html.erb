
<div class="columns">
<div class="column is-half is-offset-one-quarter">
<%= form_for @user, builder: BulmaFormBuilder::FormBuilder  do |f| %>

<%= f.text_field :name%><br>

<%= f.password_field :password %><br>

<%= f.text_field :location %> <br>
<%= f.collection_check_boxes :pokemon_card_ids, PokemonCard.all, :id, :title %> <br>
<%= f.submit %>

<% end %> 
</div>
</div>
